<div class="container well-lg">
<p>
  <strong>Name:</strong>
  <%= @lineup.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @lineup.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @lineup.user_id %>
</p>

<p>
  <strong>Players:</strong>
  <td><% @lineup.players.each do |player| %>
      <%= player.name %>
      <% end %>
      <% if @lineup.user_id == current_user.id %>
        <%= link_to 'See Players', lineup_players_path(@lineup.id) %>
        <%= link_to 'Add New Player', new_lineup_player_path(@lineup.id) %>
      <% end %>
  </td>
</p>

<% if @lineup.user_id == current_user.id %>
  <%= link_to 'Edit', edit_lineup_path(@lineup) %> |
<% end %>
<%= link_to 'Back', lineups_path %>
</div>
