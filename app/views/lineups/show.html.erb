<div class="container well-lg">

  <button id="next" data-id="<%= @lineup.id %>" onclick="nextLineup()">Show Next Lineup</button>
  <button id="previous" data-id="<%= @lineup.id %>" onclick="previousLineup()">Show Previous Lineup</button>
  <br></br>
<p>
  <strong>Name:</strong>
  <div id="name"><%= @lineup.name %></div>
</p>

<p>
  <strong>Description:</strong>
  <div id="description"><%= @lineup.description %></div>
</p>

<p>
  <strong>User:</strong>
  <div id ="user"><%= @lineup.user_id %></div>
</p>

<p>
  <strong>Players:</strong>
  <br>

  <table class="table" id="myTable">
    <thead>
      <tr>
        <th onclick="sortTable(0)">Name</th>
        <th onclick="sortTable(1)">Status</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody id="tableBody">
  <% @lineup.players.each do |player| %>
    <tr>
      <td><%= player.name %></td>
      <td><%= LineupsPlayer.find_by(player_id: player.id, lineup_id: @lineup.id).player_starting %></td>
    </tr>
      <% end %>
    </tbody>
  </table>

  <div class="form-group modal-sm">
    <%= form.label :add_player %>
    <br></br>
    Enter new player details here: <%= form.fields_for :players, lineup.players.build do |players_fields| %>
      <%= players_fields.text_field :name, placeholder: 'Name (Required)', class: 'form-control' %>
      <%= players_fields.select :position, ['Widereciever', 'Quarterback', 'Runningback', 'Defense'], class: 'form-control' %>
      <%= players_fields.number_field :projectedPoints, placeholder: 'Projected Points', class: 'form-control' %>
      <%= players_fields.number_field :actualPoints, placeholder: 'Actual Points', class: 'form-control' %>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>

  <div id="playerResult">
    <h2 id="playerName"></h2>
    <p id="playerPosition"></p>
    <p id="playerActualPoints"></p>
    <p id="playerProjectedPoints"></p>
  </div>

  <% if @lineup.user_id == current_user.id %>
    <br></br>
    <%= link_to 'See Players', lineup_players_path(@lineup.id) %>
    <br>
    <%= link_to 'Add New Player', new_lineup_player_path(@lineup.id) %>
    <br>
    <%= link_to 'Edit Lineup', edit_lineup_path(@lineup) %>
  <% end %>
</p>

<%= link_to 'Back', lineups_path %>

</div>
