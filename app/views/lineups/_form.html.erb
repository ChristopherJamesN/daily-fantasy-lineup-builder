<%= form_with(model: lineup, local: true) do |form| %>
  <% if lineup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lineup.errors.count, "error") %> prohibited this lineup from being saved:</h2>

      <ul>
      <% lineup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <label for="lineup_name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :lineup_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="lineup_description" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <%= form.text_field :description, id: :lineup_description, class: 'form-control' %>
    </div>
  </div>

  <well>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"> Quarterback </label>
      <div class="col-sm-10">
        <%= form.collection_select 'players_attributes[quarterback]', Player.where(position: 'Quarterback'), :id, :name, {}, class: 'form-control' %>
      </div>
    </div>
  </well>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"> Runningback 1 </label>
      <div class="col-sm-10">
        <%= form.collection_select 'players_attributes[runningback1]', Player.where(position: 'Runningback1'), :id, :name, {}, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"> Runningback 2 </label>
      <div class="col-sm-10">
        <%= form.collection_select 'players_attributes[runningback2]', Player.where(position: 'Runningback2'), :id, :name, {}, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"> Widereceiver 1 </label>
      <div class="col-sm-10">
        <%= form.collection_select 'players_attributes[widereciever1]', Player.where(position: 'Widereciever1'), :id, :name, {}, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"> Widereceiver 2 </label>
      <div class="col-sm-10">
        <%= form.collection_select 'players_attributes[widereciever2]', Player.where(position: 'Widereciever2'), :id, :name, {}, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"> Widereceiver 3 </label>
      <div class="col-sm-10">
        <%= form.collection_select 'players_attributes[widereciever3]', Player.where(position: 'Widereciever3'), :id, :name, {}, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"> Tightend </label>
      <div class="col-sm-10">
        <%= form.collection_select 'players_attributes[tightend]', Player.where(position: 'Tightend'), :id, :name, {}, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"> Flex </label>
      <div class="col-sm-10">
        <%= form.collection_select 'players_attributes[flex]', Player.where(position: 'Flex'), :id, :name, {}, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"> Defense: </label>
      <div class="col-sm-10">
        <%= form.collection_select 'players_attributes[defense]', Player.where(position: 'Defense'), :id, :name, {}, class: 'form-control'  %>
      </div>
    </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary">Create Lineup</button>
  </div>
<% end %>
