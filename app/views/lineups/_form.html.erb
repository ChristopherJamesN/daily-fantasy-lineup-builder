<%= form_with(model: lineup, local: true) do |form| %>
  <% if lineup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lineup.errors.count, "error") %> prohibited this lineup from being saved:</h2>

      <ul>
      <% lineup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :lineup_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :lineup_description %>
  </div>

  <div class="field">
    <%= form.fields_for :players, lineup.players.build do |players_fields| %>
      <%= players_fields.text_field :name %>
      <%= players_fields.text_field :position %>
      <%= players_fields.number_field :projectedPoints %>
      <%= players_fields.number_field :actualPoints %>
    <% end %>
</div>

  #Add the ability to add an exisiting player or create a new one here.

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
